<!-- Modal -->
<div class="modal fade" id="new-post-modal" tabindex="-1" aria-labelledby="new-post-modal-label" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header justify-content-center">
        <p class="modal-title fs-6 fw-semibold" id="new-post-modal-label">Create a new post</p>
      </div>
      <div class="modal-body d-flex justify-content-center align-items-center">
        <div class="pt-3" style="margin-left: auto; margin-right: auto; text-align: center;">
          <%= image_tag "icons/image-gallery.png", width: "95", class: "mb-3" %>
          <p class="fs-5">Drag photos and videos here</p>
          <%= form_with model: Post.new, data: { controller: "new-post-form " } do |f| %>
            <%= link_to "Select from computer", "", data: { action: "click->new-post-form#selectFile" }, id: "post-select-file-button", class: "btn btn-primary insta-primary" %>
            <%= f.file_field :photo, data: { "new-post-form-target": "photoFile", action: "change->new-post-form#submitForm" } , class: "d-none" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
